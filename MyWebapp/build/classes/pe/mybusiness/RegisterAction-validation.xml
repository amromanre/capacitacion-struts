<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
    <validator type="requiredstring">
        <param name="firstName">firstName</param>
        <message>First name is required.</message>
    </validator>
    <validator type="requiredstring">
        <param name="fieldname">lastName</param>
        <message>Last is required.</message>
    </validator>
    <validator type="required">
        <param name="fieldname">age</param>
        <message>Age is required.</message>
    </validator>
    <validator type="int">
        <param name="fieldname">gender</param>
        <param name="nim">18</param>
        <message>Age should be above 18.</message>
    </validator>
	<validator type="requiredstring">
		<param name="fieldname">email</param>
		<message>Email is required.</message>
	</validator>
	<validator type="email">
		<param name="fieldname">email</param>
		<message>Email address not valid.</message>
	</validator>
	 <validator type="requiredstring">
        <param name="fieldname">address</param>
        <message>Address is required.</message>
    </validator>
    
</validators>